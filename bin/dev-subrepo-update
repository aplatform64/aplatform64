#!/usr/bin/env bash
#
# Update GIT sub-repositories
#
# * Use when GIT submodule is not possible or needed
# * Sub-repositories are regular GIT repositories created inside another one
# * Template: 2.0.0
#

#
# Imports
#

# shellcheck source=SCRIPTDIR/dev-set
source ./bin/dev-set || exit 1
# shellcheck source-path=SCRIPTDIR/../lib/bl64
source "${DEV_CICD_BASHLIB64}/bashlib64.bash" || exit 1

#
# Main
#

declare repo=''

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_check_export 'DEV_CICD_REPO_ORIGIN_NAME' &&
  bl64_check_export 'DEV_CICD_REPO_UPSTREAM_NAME' &&
  bl64_check_export 'DEV_CICD_SUBREPO_BRANCH_MAIN' &&
  bl64_check_export 'DEV_CICD_SUBREPO_LIST' &&
  bl64_check_export 'DEV_CICD_SUBREPO_ROOT' &&
  bl64_check_directory "$DEV_CICD_SUBREPO_ROOT" ||
  exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'update-subrepo'
bl64_msg_show_phase 'Update sub-repositories'
cd "$DEV_CICD_SUBREPO_ROOT" || exit $?
for repo in $DEV_CICD_SUBREPO_LIST; do
  bl64_check_directory "$repo" || exit $?
  bl64_msg_show_task "Update sub-repository (${repo})"
  cd "$repo" &&
    bl64_vcs_run_git checkout "$DEV_CICD_SUBREPO_BRANCH_MAIN" &&
    bl64_vcs_run_git pull "$DEV_CICD_REPO_UPSTREAM_NAME" "$DEV_CICD_SUBREPO_BRANCH_MAIN" &&
    bl64_vcs_run_git push "$DEV_CICD_REPO_ORIGIN_NAME" "$DEV_CICD_SUBREPO_BRANCH_MAIN" &&
    cd .. ||
    exit $?
done
bl64_msg_show_batch_finish $? 'update-subrepo'
