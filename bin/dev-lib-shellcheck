#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=bin
source ./bin/dev-env-shellcheck || exit 1
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

#
# Functions
#

function dev_lib_shellcheck() {
  bl64_dbg_app_show_function
  INST64_SHELLCHECK_TARGET="$DEV_LIB_SHELLCHECK_TARGET" \
    INST64_SYSTEM_WIDE='NO' \
    INST64_SHELLCHECK_METHOD='BINARY' \
    "${DEV_LIB_SHELLCHECK_INSTALLER}"
}

function dev_lib_initialize() {
  bl64_dbg_app_show_function
  bl64_check_file "$DEV_LIB_SHELLCHECK_INSTALLER"
}

#
# Main
#

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_lib_script_version_set '1.0.1'
bl64_msg_all_enable_verbose

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
dev_lib_initialize &&
  dev_lib_shellcheck
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
