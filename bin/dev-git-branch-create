#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=bin
source ./bin/dev-env-git || exit 1
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-rxtx.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-api.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-vcs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

#
# Functions
#

function dev_repo_branch_create() {
  bl64_dbg_app_show_function "$@"
  local dev_repo_branch_name="$1"

  bl64_msg_show_task "switch to main branch (${DEV_GIT_BRANCH_MAIN})"
  bl64_vcs_run_git checkout "$DEV_GIT_BRANCH_MAIN" &&
    bl64_msg_show_task "create branch (${dev_repo_branch_name})" &&
    bl64_vcs_run_git checkout -b "$dev_repo_branch_name" &&
    bl64_msg_show_task "register branch in origin (${DEV_GIT_REMOTE_ORIGIN}/${dev_repo_branch_name})" &&
    bl64_vcs_run_git push --set-upstream "${DEV_GIT_REMOTE_ORIGIN}" "${dev_repo_branch_name}"
}

function dev_git_initialize() {
  bl64_dbg_app_show_function
  bl64_vcs_setup
}

#
# Main
#

declare dev_repo_branch_name="${1:-feature/update}"

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'dev-git-branch-create'
dev_git_initialize &&
  dev_repo_branch_create "$dev_repo_branch_name"
bl64_msg_show_batch_finish $? 'dev-git-branch-create'
