#!/usr/bin/env bash
#
# Lint ansible code
#

#
# Imports
#

# shellcheck source=SCRIPTDIR/dev-set
source ./bin/dev-set || exit 1

# shellcheck source-path=SCRIPTDIR/../lib
source "$DEV_CICD_BASHLIB64" || exit 1

#
# Globals
#

#
# Functions
#

function dev_lint_ansible() {
  local collection="$1"
  local role=''

  cd ${DEV_COLLECTIONS}/${collection}/roles || return $?
  for role in *; do
    bl64_msg_show_phase "lint role (${collection}/${role})"
    "$DEV_CMD_ANSIBLELINT" \
      --project-dir "$role" \
      --config-file "$DEV_ANSIBLE_LINT" ||
      return $?
  done
}

#
# Main
#

declare collection="${1:-}"
declare -i status=0

bl64_check_parameter 'collection' &&
  bl64_check_directory "${DEV_COLLECTIONS}/${collection}" ||
  exit $?

bl64_msg_show_batch_start 'ansible-lint'
dev_lint_ansible "$collection"
status=$?
bl64_msg_show_batch_finish $status 'ansible-lint'

exit $status
